{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",  
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "dist/**",
          "node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js"  
    }
  ],
  "functions": {
    "src/main.ts": {
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "NODE_ENV": "production"
  }
}